// Esta API captura la IP del usuario, registra la fecha y hora de su primera visita, y calcula el tiempo restante de la cuenta regresiva de 60 minutos.
import clientPromise from "../../lib/mongodb";

export default async function handler(req, res) {
    const client = await clientPromise;
    const db = client.db("sistema_pagina_db");

    if (req.method === "POST") {
        const { direccion_ip } = req.body;

        // Verifica si la IP ya existe en la base de datos
        const existingEntry = await db.collection("tab_ip_contador").findOne({ direccion_ip });

        if (existingEntry) {
            // Calcula el tiempo restante (en minutos)
            const now = new Date();
            const elapsedTime = Math.floor((now - existingEntry.dateTime) / 60000); // Convertir ms a minutos
            const remainingTime = 60 - elapsedTime;

            if (remainingTime <= 0) {
                return res.status(200).json({
                    message: "Tiempo agotado, redirigir a /checkout-precio-normal",
                    redirect: true,
                });
            }

            return res.status(200).json({
                message: "Tiempo restante",
                remainingTime,
                redirect: false,
            });
        }

        // Si no existe, crea una nueva entrada
        await db.collection("tab_ip_contador").insertOne({
            direccion_ip,
            dateTime: new Date(),
        });

        return res.status(201).json({
            message: "IP registrada con éxito. Cuenta regresiva iniciada.",
            remainingTime: 60,
            redirect: false,
        });
    }

    res.status(405).json({ error: "Método no permitido" });
}